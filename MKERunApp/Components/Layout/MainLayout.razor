@inherits LayoutComponentBase
@using MKERunApp.Components.Layout.NavMenu

<ThemeProvider/>
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<style>
    html,
    body,
    body > header {
        height: 100%;
        margin: 0;
        padding: 0;
    }
</style>


<div style="background-image: url('/Background/TrackBackgroundLighter.svg');background-size: cover; background-attachment: fixed;height:100%">
    <MudLayout>
        <MudHidden Breakpoint="Breakpoint.Xs">
            <NavMenuDesktop />
        </MudHidden>

        <MudHidden Breakpoint="Breakpoint.SmAndUp">
            <NavMenuMobile />
        </MudHidden>

        <MudMainContent Class="pt-2">
            <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>