@page "/CoachedTeams"
@using MKERunApp.Components.Coach

@inject ISnackbar Snackbar
@inject IDbContextFactory<ApplicationDbContext> factory

<AuthorizeView>
    <MudGrid>
        <MudItem xs="12 "sm="6" md="5" lg="3" xl="2">
            <MudStack Row AlignItems="AlignItems.Center">
                <MudText Typo="Typo.h4"><b>Teams</b></MudText>
                <MudPaper Class="pa-2">
                    <TeamSelector SelectedTeamChanged=SelectedTeamChanged />
                </MudPaper>
            </MudStack>
        </MudItem>
        
        <MudItem xs="12 " sm="6" md="5" lg="3" xl="2">
            @if (SelectedTeam != null)
            {
                <MudPaper Class="pa-2">
                    <InviteAthleteToTeam Team="SelectedTeam" />
                </MudPaper>
            }
        </MudItem>

        @if (SelectedTeam != null)
        {
            <MudItem md="12">
                <TeamTabs Team="SelectedTeam" />
            </MudItem>
        }
    </MudGrid>
</AuthorizeView>

@code {
    private Team? SelectedTeam;

    private async Task SelectedTeamChanged(Team team)
    {
        try
        {
            SelectedTeam = await factory.LoadTeam(team.Id);
        }
        catch (Exception ex)
        {
            Snackbar.Add(ex.Message, Severity.Error);
        }
    }
}