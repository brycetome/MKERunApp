<style>
    .mud-button-label
    {
        height: 100%;
        display: block;
    }
</style>

<MudButton OnClick="ClickedDay" FullWidth Style="height:100%">
    <MudStack Spacing="1" AlignItems="AlignItems.Start" Style="height:100%">
        <MudText>@TodaysActivities.GetDay.Day</MudText>
        <MudStack Spacing="0" Style="width:100%">
            @foreach (Activity activity in TodaysActivities.GetActivities)
            {
                <MudStack Row Justify="Justify.SpaceBetween" Style="width:100%">
                    <MudText Typo="Typo.caption">
                        @string.Join(", ", activity.Groups.Select(g => g.Name))
                    </MudText>
                    <MudText Typo="Typo.caption">@($"{activity.DurationSeconds / 60}min")</MudText>
                </MudStack>
            }
        </MudStack>
    </MudStack>
</MudButton>

<MudPopover AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter" Open=OpenNewActivity Fixed>
    <MudPaper Class="pa-2">
        <ActivityForm @bind-Show=OpenNewActivity TodaysActivities="TodaysActivities"/>
    </MudPaper>
</MudPopover>

@code {
    [Parameter][EditorRequired] public required CalendarDayActivities TodaysActivities { get; set; }
    private bool OpenNewActivity = false;

    private void ClickedDay()
    {
        OpenNewActivity = !OpenNewActivity;
    }
}
