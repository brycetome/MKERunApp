<MudStack Row AlignItems="AlignItems.Center" Class="pa-4" Style="width:100%">
    <MudIcon Icon="@Icon" Size="Size.Large" />
    <MudStack Spacing="0" AlignItems="AlignItems.Start" Style="width:100%">
        <MudText Typo="Typo.body1"><b>@Text</b></MudText>
        <MudText Typo="Typo.caption">@SubText</MudText>
    </MudStack>
</MudStack>

@code {
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public string SubText { get; set; } = "";
}
