<MudSelect @bind-Value=_selectedTeam
           T="Team"
           Dense
           Margin="Margin.Dense"
           Variant="Variant.Outlined"
           Placeholder="Select Team"
           Style="width:100%">
    @foreach (Team team in Teams)
    {
        <MudSelectItem Value="team" />
    }
</MudSelect>

@code {
    [Parameter] public IEnumerable<Team> Teams { get; set; } = [];
    [Parameter] public Team? SelectedTeam { get; set; }
    [Parameter] public EventCallback<Team?> SelectedTeamChanged { get; set; }

    private Team? _selectedTeam
    {
        get => SelectedTeam;
        set => SelectedTeamChanged.InvokeAsync(value);
    }
}
